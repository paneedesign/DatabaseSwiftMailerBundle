{
    "name": "paneedesign/database-swiftmailer-bundle",
    "description": "Database Spool Bundle for SwiftMailer and Symfony 3+",
    "type": "symfony-bundle",
    "keywords": ["swiftmailer", "database", "ped", "symfony", "bundle"],
    "homepage": "https://github.com/paneedesign/DatabaseSwiftMailerBundle",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Amorim",
            "email": "email@rafaelamorim.me",
            "homepage": "http://rafaelamorim.me",
            "role": "Developer"
        },
        {
            "name": "Luigi Cardamone",
            "email": "luigi.cardamone@ped.technology",
            "role": "Senior Back-end Developer"
        },
        {
            "name": "Fabiano Roberto",
            "email": "fabiano.roberto@ped.technology",
            "role": "Senior Back-end Developer"
        }
    ],
    "require": {
        "php": "^7.2.0",
        "symfony/flex": "^1.6",
        "doctrine/persistence": "^2.0"
    },
    "require-dev": {
        "doctrine/annotations": "^1.8",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.7",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpdoc-parser": "^0.4.2",
        "phpstan/phpstan": "^0.12.7",
        "phpstan/phpstan-doctrine": "^0.12.9",
        "phpstan/phpstan-phpunit": "^0.12.6",
        "phpstan/phpstan-symfony": "^0.12.4",
        "phpunit/phpunit": "^8.5",
        "symfony/browser-kit": "^4.3|^5.0",
        "symfony/config": "^4.3|^5.0",
        "symfony/dependency-injection": "^4.3|^5.0",
        "symfony/expression-language": "^4.3|^5.0",
        "symfony/form": "^4.3|^5.0",
        "symfony/framework-bundle": "^4.3|^5.0",
        "symfony/http-kernel": "^4.3|^5.0",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/yaml": "^4.3|^5.0",
        "vimeo/psalm": "^3.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "PaneeDesign\\DatabaseSwiftMailerBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PaneeDesign\\DatabaseSwiftMailerBundle\\Tests\\": "Tests/"
        }
    },
    "scripts": {
        "beautify": [
            "vendor/bin/php-cs-fixer fix --verbose --config=.php_cs.dist ."
        ],
        "beautify-dry-run": [
            "vendor/bin/php-cs-fixer fix --diff --dry-run -v --config=.php_cs.dist ."
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "psalm": [
            "vendor/bin/psalm --show-info=false --threads=4"
        ],
        "sa": [
            "@phpstan",
            "@psalm"
        ]
    },
    "conflict": {
        "symfony/symfony": "^4.3|^5.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "symfony": {
            "id": "01E11F0ZVNG3KAV5MWFCWPKK7Q",
            "allow-contrib": "true"
        }
    }
}
